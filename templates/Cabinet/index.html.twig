            <h4 class="card-title">{{ goodsname[2] }}</h4>
            <p class="card-text">{{ Description[2]}}</p>
          </div>
          <div class="card-footer">
            <a href={{ path ('app_showgoods', {'gid':goodsid[2]} ) }} class="btn btn-primary">Find Out More!</a>
          </div>
        </div>
      </div>
       {% endif %}
    {% if goodsname[4] is defined %}
